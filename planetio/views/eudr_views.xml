<!--                  string="Upstream Operator/Trader (acting as Trader)"-->
<!--                  options="{'no_open': False}"-->
<!--                  attrs="{'invisible': ['|',-->
<!--                            ('eudr_company_type_rel','!=','mixed'),-->
<!--                            ('eudr_type_override','!=','TRADER')-->
<!--                          ]}"/>-->
