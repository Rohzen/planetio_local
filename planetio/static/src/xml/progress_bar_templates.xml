<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <templates id="template" xml:space="preserve">
        <t t-name="planetio.DeforestationProgressDialog">
            <div class="planetio_progress_dialog">
                <p class="planetio_progress_message" t-esc="message"/>
                <div class="progress my-3">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                         aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                        <span class="planetio_progress_value">0%</span>
                    </div>
                </div>
                <p class="planetio_progress_summary text-muted d-none"/>
            </div>
        </t>
    </templates>
</odoo>
