<odoo>
  <record id="view_res_config_settings_ai_gateway" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.ai.gateway</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
    <xpath expr="//div[hasclass('settings')]" position="inside">
        <div class="app_settings_block" data-string="AI Gateway" string="AI Gateway">
          <h2>AI Gateway</h2>
          <div class="row mt16 o_settings_container" name="general_setting_container">
              <div class="col-12 col-lg-12 o_setting_box">
              <div class="o_setting_left_pane"/>
                <div class="o_setting_right_pane">
                    <span class="o_form_label">Default provider</span>
                      <div class="text-muted">
                        <field name="ai_default_provider"/>
                      </div>
                    <span class="o_form_label">Gemini api-key</span>
                      <div class="text-muted">
                        <field name="ai_gemini_api_key" password="True"/>
                      </div>
                    <span class="o_form_label">Gemini model</span>
                      <div class="text-muted">
                        <field name="ai_gemini_model"/>
                      </div>
                    <span class="o_form_label">Max chunk chars</span>
                      <div class="text-muted">
                        <field name="ai_max_chunk_chars"/>
                      </div>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
