<odoo>
  <record id="view_res_config_settings_ai_gateway" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.ai.gateway</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[hasclass('settings')]" position="inside">

        <!-- blocco dedicato per AI Gateway -->
        <div class="app_settings_block" data-string="AI Gateway" data-key="ai_gateway">
          <h2>AI Gateway</h2>
          <div class="row mt16 o_settings_container" name="ai_gateway_settings">

            <div class="col-12 col-lg-12 o_setting_box">
              <div class="o_setting_left_pane"/>
              <div class="o_setting_right_pane">

                <span class="o_form_label">Default provider</span>
                <div class="text-muted"><field name="ai_default_provider"/></div>

                <span class="o_form_label">Gemini API key</span>
                <div class="text-muted"><field name="ai_gemini_api_key" password="True"/></div>

                <span class="o_form_label">Gemini model</span>
                <div class="text-muted"><field name="ai_gemini_model"/></div>

                <span class="o_form_label">Claude API key</span>
                <div class="text-muted"><field name="ai_claude_api_key" password="True"/></div>

                <span class="o_form_label">Claude model</span>
                <div class="text-muted"><field name="ai_claude_model"/></div>

                <span class="o_form_label">Claude max output tokens</span>
                <div class="text-muted"><field name="ai_claude_max_output_tokens"/></div>

                <span class="o_form_label">Max chunk chars</span>
                <div class="text-muted"><field name="ai_max_chunk_chars"/></div>

              </div>
            </div>

          </div>
        </div>

      </xpath>
    </field>
  </record>

    <record id="action_planetio_config_settings" model="ir.actions.act_window">
        <field name="name">AI Gateway Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="view_res_config_settings_ai_gateway"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'ai-gateway'}</field>
    </record>
</odoo>