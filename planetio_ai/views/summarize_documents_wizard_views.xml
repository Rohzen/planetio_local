<odoo>
  <record id="view_planetio_summarize_wizard" model="ir.ui.view">
    <field name="name">planetio.summarize.wizard.form</field>
    <field name="model">planetio.summarize.wizard</field>
    <field name="arch" type="xml">
      <form string="Riassumi documenti con AI">
        <group>
          <field name="planetio_model" invisible="1"/>
          <field name="planetio_res_id" invisible="1"/>
          <field name="provider"/>
          <field name="attachment_ids" widget="many2many_binary"/>
          <field name="output_post_to_chatter"/>
        </group>
        <footer>
          <button string="Esegui" type="object" name="action_run" class="btn-primary"/>
          <button string="Annulla" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
